<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <link
      href="/css/styles.css"
      rel="stylesheet"
      type="text/css">
    <title>{{ title }}</title>
  </head>
  <body>
    <header>
      <h1>Job Board</h1>
      {{ this.partial("notices", session: this.session) }}
      <nav>
        <ul>
          <li><a href="/">Home</a></li>
          % if current_company
            <li><a href="/dashboard">Dashboard</a></li>
            <li><a href="/company_account">My account</a></li>
            <li><a href="/logout">Logout</a></li>
          % else
            <li><a href="/github_oauth">GitHub login</a></li>
            <li><a href="/company_login">Company login/signup</a></li>
          % end
        </ul>
      </nav>
      <?xml version="1.0" encoding="UTF-8"?>
    </header>

    <section>
      {{ content }}
    </section>
  </body>
</html>
