<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>{{ title }}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap -->
    <link href="css/bootstrap.min.css" rel="stylesheet" media="screen">
    <link href="css/style.css" rel="stylesheet" media="screen">
  </head>
  <body>
    <div class="container">
      <header>
        <h1>Job Board</h1>
        <div class="navbar">
          <ul class="nav navbar-nav">
            <li><a class="active" href="/">Home</a></li>
            % if current_company || current_developer
              <li><a class="pull-right" href="/dashboard">Dashboard</a></li>
              <li><a href="/profile">My account</a></li>
              <li><a href="/logout">Logout</a></li>
            % else
              <li><a href="/github_oauth">GitHub login</a></li>
              <li><a href="/login">Company login/signup</a></li>
            % end
          </ul>
        </div>
        <?xml version="1.0" encoding="UTF-8"?>
      </header>
     </div>

    <section>
      {{ this.partial("notices", session: this.session) }}
      {{ content }}
    </section>
    </div>
    <!-- JavaScript plugins (requires jQuery) -->
    <script src="http://code.jquery.com/jquery.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="js/bootstrap.min.js"></script>

    <!-- Enable responsive features in IE8 with Respond.js (https://github.com/scottjehl/Respond) -->
    <script src="js/respond.js"></script>
  </body>
</html>
