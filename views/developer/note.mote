<form method="POST" onsubmit="addNote({{ application.id }}); return false;">
  <textarea id="noteTxt_{{ application.id }}" name="note" placeholder="Write your note here..." onkeyup="updateCountdownNote({{ application.id }})" maxlength="200"></textarea>

  <span id="countdownNote_{{ application.id }}">200 characters remaining.</span><br/>

  <button>Add</button>
</form>

<script src="/js/limit_description.js"></script>
